---
import { Icon } from "astro-icon";

const links = [
  {
    url: "https://github.com/kalidao",
    description: "Kali on GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://discord.com/invite/UKCS9ghzUE",
    description: "Kali on Discord",
    icon: "fa-brands:discord",
  },
  {
    url: "https://twitter.com/kali__gg",
    description: "Kali on Twitter",
    icon: "fa-brands:twitter",
  },
];
---

<footer
  class="footer flex flex-row items-center justify-between p-4 bg-neutral text-neutral-content"
>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex items-center justify-center w-16 h-16 p-4 rounded-full"
            href={link.url}
            target="_blank"
            rel="noopenner"
          >
            <span class="sr-only">{link.description}</span>
            <Icon name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
  <address>
    <a href="mailto:contact@kali.gg">Contact KaliCo</a>
  </address>
</footer>
